{
  "compilerOptions": {
    "target": "esnext",
    "lib": [
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": false,
    "isolatedModules": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "declaration": false,
    "outDir": "./build",
    "moduleResolution": "node",
    "module": "esnext",
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "typeRoots": [
      "./node_modules/@types",
      "./src/main/urlProcessor/custom.d.ts"
    ]
  },
  "include": [
    "src/main/**/*"
  ],
  "exclude": [
    "node_modules",
    "openAPI",
    "src/__tests__"
  ]
}
